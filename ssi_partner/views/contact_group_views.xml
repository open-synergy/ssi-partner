<odoo>
<record id="contact_group_view_search" model="ir.ui.view">
    <field name="name">contact_group - search</field>
    <field name="model">contact_group</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="contact_group_view_tree" model="ir.ui.view">
    <field name="name">contact_group - tree</field>
    <field name="model">contact_group</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='name']" position="after">
                <field name="commercial_contact_id" widget="many2one_avatar" />
            </xpath>
        </data>
    </field>
</record>

<record id="contact_group_view_form" model="ir.ui.view">
    <field name="name">contact_group - form</field>
    <field name="model">contact_group</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='active']" position="after">
                <field name="commercial_contact_id" widget="many2one_avatar" />
                <field name="contact_ids" widget="many2many_tags_avatar" domain="[('id', 'child_of', commercial_contact_id)]"/>
            </xpath>
        </data>
    </field>
</record>

<record id="contact_group_action" model="ir.actions.act_window">
    <field name="name">Helpdesk Contact Groups</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">contact_group</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="contact_group_menu"
        name="Contact Groups"
        parent="ssi_partner.res_partner_menu_config"
        action="contact_group_action"
        sequence="3"
    />

</odoo>
